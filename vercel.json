{
  "version": 2,
  "name": "backend",
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",  // All routes starting with /api
      "dest": "/api/$1"     // Forward to the corresponding route inside server.js
    },
    {
      "src": "/(.*)",      // All other routes
      "dest": "/"          // Redirect to the root handler in server.js
    }
  ]
}
